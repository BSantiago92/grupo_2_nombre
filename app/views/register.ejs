<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

    <body>
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>


        <%- include('./partials/header') %>

            <div class="form">
                <form action="register" method="POST">
                    <h1>REGISTRARSE</h1>
                    <input class="form-control" type="text" name="first_name" id="first_name" placeholder="Nombre">
                    <p id="email-error-alert" class="is-danger">
                        <%= locals.errors && errors.both ? errors.both.msg : '' %>
                        <%= locals.errors && errors.first_name ? errors.first_name.msg : '' %>
                    </p>

                    <input class="form-control" type="text" name="last_name" id="last_name" placeholder="Apellido">
                    <p id="email-error-alert" class="is-danger">
                        <%= locals.errors && errors.both ? errors.both.msg : '' %>
                        <%= locals.errors && errors.last_name ? errors.last_name.msg : '' %>
                    </p>

                    <input class="form-control" type="email" name="email" id="email" placeholder="Email">
                    <p id="email-error-alert" class="is-danger">
                        <%= locals.errors && errors.both ? errors.both.msg : '' %>
                        <%= locals.errors && errors.email ? errors.email.msg : '' %>
                    </p>

                    <input class="form-control" type="password" name="password" id="password" placeholder="ContraseÃ±a">
                    <p id="password-error-alert" class="is-danger">
                        <%= locals.errors && errors.both ? errors.both.msg : '' %>
                        <%= locals.errors && errors.password ? errors.password.msg : '' %>

                    </p>
                    <input class="btn btn-success" type="submit" value="Crear">
                </form>
            </div>
            <%- include('./partials/footer') %>
            <script src="/js/register.js"></script>
    </body>

</html>
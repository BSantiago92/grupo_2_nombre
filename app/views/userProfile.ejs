<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head') %>

<body>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>


    <%- include('./partials/header') %>


    <main class="profile_main">
        <div class="container_profile">
            <aside>
                <div class="profile_info_container">
                    <div class="profile_info">
                        <p class="profile_mail"><%= user.email %></p>
                         
                        <div class="logout_bttn">
                            <% if (locals.user) { %>
                                <form action="/user/logout" method="POST">
                                    <button type="submit" class="bttn_logout">logout</button>
                                </form>
                            <% } %>
                        </div>                        
                    </div>
                    <div class="my_acount">
                        <p class="profile_acount"><strong>Mi cuenta</strong></p>
                        <ul>
                            <li>
                                <a href="">
                                    Historial de compras 
                                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-right" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"/>
                                    </svg>   
                                </a>
                            </li>
                            <li>
                                <a href="">
                                    Editar perfil
                                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-right" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"/>
                                    </svg>                                    
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </aside>
        </div>

        <div >
            <h3>basado en tus ultimas compras</h3>
            <div class="masVendidos">
                <% masVendido.forEach(MV => { %>
                    <%- include('./partials/masVendido', { MV }) %>
                <% }) %>
            </div>
        </div>
    </main>
    <%- include('./partials/footer') %>
</body>

</html>
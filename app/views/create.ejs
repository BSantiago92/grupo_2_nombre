<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

    <body>
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>


        <%- include('./partials/header') %>

            <div class="form">
                <form action="/product/" method="POST" enctype="application/x-www-form-urlencoded">
                    <h1>Crear producto</h1>
                    
                    <input class="form-control" type="text" name="name" placeholder="Nombre del producto">
                    <input class="form-control" type="text" name="brand" placeholder="Marca">
                    <!-- <input class="form-control" type="text" name="category" placeholder="Categoría"> -->
                    <select class="form-control" name="category_id" id="category_id">
                        <option value="">Selecciona una categoría</option>
                        <% categories.forEach(Category => { %>
                           <option 
                            value="<%= Category.id %>"  
                            <%= locals.product && product.category_id == Category.id ? "selected": "";  %> >
                                <%= Category.name %>
                            </option> 
                        <% });  %> 
                    </select>
                    <input class="form-control" type="text" name="model_1" placeholder="Modelo">
                    <input class="form-control" type="text" name="model_2" placeholder="Modelo">
                    <input class="form-control" type="text" name="model_3" placeholder="Modelo">
                    <input class="form-control" type="file" name="img">
                    <input class="form-control" type="text" name="description" placeholder="Descripción">
                    <input class="form-control" type="number" name="price" placeholder="Precio">
                                     


                    <input class="btn btn-success" type="submit" value="Crear producto">

                </form>
            </div>
            <%- include('./partials/footer') %>
    </body>

</html>
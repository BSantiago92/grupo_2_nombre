<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

    <body>

        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

        <%- include('./partials/header') %>

            <main class="PDmain">
                <div class="PCtitle">
                    <h3>CARRITO</h3>
                </div>
                <section class="cart">
                    <% carrito.forEach(product_cart => { %>
                        <%- include('./partials/cart', { product_cart }) %>
                    <% }) %>
                </section>
                <section class="PCPurchase">
                    <article class="purchaseArticle">
                        <div class="discount_code">
                            <h5>¿TENÉS UN CODIGO DE DESCUENTO?</h5>
                            <div class="code">
                                <input class="add_code_var" type="text" name="discount_code" value="INSERTAR CODIGO">
                            <input class="bttn_add_code" type="submit" value="AÑADIR">                                
                            </div>

                        </div>
                        <div class="price">
                            <h4 class="price_text">TOTAL:</h4>
                            <h4 class="price_text">
                                $ 
                                <% var arr = carrito; %>

                                <% var total = arr.reduce((sum, value) => (typeof value.price == "number" ? sum + value.price : sum), 0); %>
                                <%- total; %>                                 
                            </h4>     
        
                            
                        </div>
                        <input class="PCproductDetailButton" type="submit" value="COMPRAR">
                    </article>
                </section>
            </main>


            <%- include('./partials/footer') %>
    </body>

</html>
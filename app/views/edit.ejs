<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

    <body>
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>


        <%- include('./partials/header') %>

            <div class="form">
                <form action="/product/products/<%= product && product.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                    <h1>Editar producto</h1>
                    <input class="form-control" type="text" name="id" value="<%= product && product.id %>">
                    <input class="form-control" type="text" name="name" value="<%= product && product.name %>" placeholder="Nombre del producto">
                    <!-- <input class="form-control" type="text" name="category_id" value="<%= product && product.Category.name %>" placeholder="Categoría"> -->

                    <select class="form-control" name="category_id" id="categor_id">
                        <% categories.forEach(Category => { %>
                           <option value="<%= Category.id %>" <%= product.category_id == Category.id ? 'selected': null %>><%= Category.name %></option> 
                        <% });  %> 
                    </select>


                    <input class="form-control" type="text" name="model1" value="<%= product && product.model_1 %>" placeholder="Modelo 1">
                    <input class="form-control" type="text" name="model2" value="<%= product && product.model_2 %>" placeholder="Modelo 2">
                    <input class="form-control" type="text" name="model3" value="<%= product && product.model_3 %>" placeholder="Modelo 3">   
                    <input class="form-control" type="file" name="img" value="<%= product && product.img %>">

                    <input class="form-control" type="text" name="description" value="<%= product && product.description %>" placeholder="Descripción">
                    <input class="form-control" type="number" name="price" value="<%= product && product.price %>" placeholder="Precio">
                    


                    <input class="btn btn-success" type="submit" value="Editar">

                </form>
            </div>
            <%- include('./partials/footer') %>
    </body>

</html>
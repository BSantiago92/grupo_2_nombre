<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

    <body>
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>


        <%- include('./partials/header') %>

            <div class="form">
                <form action="/user/login" method="POST">
                    <h1>INICIAR SESION</h1>

                        <input type="email" name="email" id="email" class="form-control <%= locals.errors && errors.both || locals.errors && errors.email ? 'is-danger' : '' %> " value="<%= locals.user && user.email %>" placeholder="E-mail">

                        <p id="email-error-alert" class="is-danger">
                            <%= locals.errors && errors.both ? errors.both.msg : '' %>
                            <%= locals.errors && errors.userEmail ? errors.userEmail.msg : '' %>
                        </p>

                        <input type="password" name="password" id="password" class="form-control <%= locals.errors && errors.both || locals.errors && errors.password ? 'is-danger' : '' %>" placeholder="contraseña">

                        <p id="password-error-alert" class="is-danger">
                            <%= locals.errors && errors.both ? errors.both.msg : '' %>
                            <%= locals.errors && errors.password ? errors.password.msg : '' %>
                            <%= locals.errors && errors.processLogin ? errors.processLogin.msg : '' %>
                        </p>

                    <div class="field">
                        <label for="remember">Recordar mis datos</label>
                        <div class="control">
                            <input type="checkbox" name="remember" id="remember">
                        </div>
                    </div>
                    <div>
                        <input class="btn btn-success" type="submit" value="Ingresar">
                    </div>

                    <div>
                        <% if (locals.user) { %>
                            <p><a href="/user/edit/<%= user.id %>">Editar Usuario</a></p>
                            <% } else { %>
                                <p><a href="/user/register">Olvidaste tu contraseña?</a></p>
                                <p><a href="/user/register">REGISTRARSE</a></p>
                                <% }; %>
                    </div>
                </form>
            </div>

            <%- include('./partials/footer') %>
            <script src="/js/processLogin.js"></script>
    </body>

</html>